<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapFragment">

    <!-- HorizontalScrollView for images -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <LinearLayout
            android:id="@+id/horizontalScrollViewLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <!-- Your ImageViews go here -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- GridLayout for the 20x20 grid -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:layout_below="@id/horizontalScrollView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/grid_background">
    </GridLayout>

    <!-- LinearLayout for buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Vertical LinearLayout for Legend -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridLayout"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legend"
                android:textSize="8sp"
                android:textColor="#000000"
                android:layout_marginBottom="2dp"/>
            <!-- North Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="#FF6961" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="North"
                    android:textSize="8sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

            <!-- South Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="#77DD77" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="South"
                    android:textSize="8sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

            <!-- East Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="#A7C7E7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="East"
                    android:textSize="8sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

            <!-- West Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="#FFFAA0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="West"
                    android:textSize="8sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

            <!--   Found legend         -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="#39FF14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Found"
                    android:textSize="8sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            >

            <Button
                android:id="@+id/buttonUp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:textFontWeight="1000"
                app:layout_column="1"
                app:layout_row="0"
                android:background="@drawable/button_up"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/buttonLeft"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textFontWeight="1000"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="3.25dp"
                app:layout_column="0"
                app:layout_row="1"
                android:background="@drawable/button_left"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/buttonDown"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textFontWeight="1000"
                android:layout_marginEnd="6.5dp"
                app:layout_column="1"
                app:layout_row="1"
                android:background="@drawable/button_down"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/buttonRight"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textFontWeight="1000"
                app:layout_column="2"
                app:layout_row="1"
                android:background="@drawable/button_right"
                android:textColor="#000000"/>
        </androidx.gridlayout.widget.GridLayout>
        <!-- Buttons go here -->

        <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <Button
                android:id="@+id/addObstacles"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="Add"
                android:textSize="8sp"
                />
        <Button
            android:id="@+id/buttonSendObstacle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Send to RPi"
            android:textSize="8sp"
            />
            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Start"
                android:textSize="8sp"
                />


        </LinearLayout>

        <!-- Status and bluetooth status-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/statusHeader"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gridLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Status Message: "
                android:textSize="8sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/statusContent"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gridLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="... "
                android:textSize="8sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/bluetoothHeader"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gridLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Bluetooth Status: "
                android:textSize="8sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/connectionStatus"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gridLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="Connected/Not Connected"
                android:textSize="8sp"
                android:textColor="#000000" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/robotPositionTextView"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gridLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Robot: X: -1, Y: -1, Direction: "
                android:textSize="8sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/obstacleContent"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gridLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Obstacles Content..."
                android:textSize="8sp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
