<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapFragment">

    <!-- HorizontalScrollView for images -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/horizontalScrollViewLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <!-- Your ImageViews go here -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- GridLayout for the 20x20 grid -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_below="@id/horizontalScrollView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/grid_background">
    </GridLayout>

    <!-- LinearLayout for buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Vertical LinearLayout for Legend -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridLayout"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legend"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>
            <!-- North Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#FF6961" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="North"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <!-- South Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#77DD77" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="South"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <!-- East Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#A7C7E7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="East"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <!-- West Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#FFFAA0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="West"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="300dp"
            android:layout_height="150dp">

            <Button
                android:id="@+id/buttonUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="🔼"
                android:textSize="30dp"
                android:textFontWeight="1000"
                app:layout_column="1"
                app:layout_row="0"
                android:backgroundTint="#00000000"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/buttonLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="◀️"
                android:textSize="30dp"
                android:textFontWeight="1000"
                android:layout_marginEnd="10dp"
                app:layout_column="0"
                app:layout_row="1"
                android:backgroundTint="#00000000"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/buttonDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔽"
                android:textSize="30dp"
                android:textFontWeight="1000"
                android:layout_marginEnd="10dp"
                app:layout_column="1"
                app:layout_row="1"
                android:backgroundTint="#00000000"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/buttonRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="▶️"
                android:textSize="30dp"
                android:textFontWeight="1000"
                app:layout_column="2"
                app:layout_row="1"
                android:backgroundTint="#00000000"
                android:textColor="#000000"/>
        </androidx.gridlayout.widget.GridLayout>
        <!-- Buttons go here -->
        <Button
            android:id="@+id/buttonSendObstacle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send to RPi" />

        <Button
            android:id="@+id/buttonRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate" />

        <Button
            android:id="@+id/buttonChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change" />

        <TextView
            android:id="@+id/robotPositionTextView"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Robot: X: -1, Y: -1, Direction: "
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>
